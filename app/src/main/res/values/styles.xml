<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Dialog">


        <item name="android:textColor">#ca000000</item>
        <item name="android:textColorPrimary">#000</item>

        <item name="android:padding">5dp</item>


        <item name="android:fontFamily">@font/josefin</item>


        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>



    </style>


    <style name="NavStyle" parent="@android:style/Theme.Holo.Dialog">


        <item name="android:textColor">#fff</item>

        <item name="android:padding">5dp</item>


        <item name="android:fontFamily">@font/josefin</item>






    </style>

    <style name="translucentDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Headline" parent="@android:style/Theme.Holo.Dialog">


        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/heuristica_bold</item>
        <item name="android:textSize">@dimen/article_title</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">center</item>




    </style>


    <style name="Author_date" parent="@android:style/Theme.Holo.Dialog">


        <item name="android:textColor">#f0847f7f</item>
        <item name="android:fontFamily">@font/lmroman_regular</item>
        <item name="android:textSize">@dimen/article_date</item>
        <item name="android:maxLines">1</item>





    </style>

    <style name="Description" parent="@android:style/Theme.Holo.Dialog">


        <item name="android:textColor">#d66e6c6b</item>
        <item name="android:fontFamily">@font/heuristica_bold</item>
        <item name="android:textSize">@dimen/article_desc</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>





    </style>

    <style name="small_btn" parent="@android:style/Theme.Holo.Dialog">


        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">@font/heuristica_bold</item>
        <item name="android:textSize">@dimen/small_btn_txt</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>






    </style>



    <style name="small_btn_selected" parent="@android:style/Theme.Holo.Dialog">


        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">@font/heuristica_bold</item>
        <item name="android:textSize">@dimen/small_btn_txt</item>
        <item name="android:background">@drawable/rounded_button_selected</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>




    </style>


    <dimen name="small_btn_txt">12dp</dimen>
</resources>
