<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/pb_loading"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/btn_container"
        android:layout_margin="3dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        >

        <Button
            android:layout_width="@dimen/btn_radius"
            android:layout_height="@dimen/btn_radius"
            android:id="@+id/btn_us"
            android:text="@string/US"
            style="@style/small_btn"
            android:layout_margin="3dp"
            />


        <Button
            android:layout_width="@dimen/btn_radius"
            android:layout_height="@dimen/btn_radius"
            android:id="@+id/btn_uk"
            android:text="@string/uk"
            style="@style/small_btn"
            android:layout_margin="3dp"


            />


        <Button
            android:layout_width="@dimen/btn_radius"
            android:layout_height="@dimen/btn_radius"
            android:id="@+id/btn_tech"
            android:text="@string/tech"
            style="@style/small_btn"
            android:layout_margin="3dp"


            />


        <Button
            android:layout_width="@dimen/btn_radius"
            android:layout_height="@dimen/btn_radius"
            android:id="@+id/btn_sports"
            android:text="@string/spo"
            style="@style/small_btn"
            android:layout_margin="3dp"


            />


        <Button
            android:layout_width="@dimen/btn_radius"
            android:layout_height="@dimen/btn_radius"
            android:id="@+id/btn_mirror"
            android:text="@string/mir"
            android:layout_margin="3dp"
            style="@style/small_btn"


            />


        <Button
            android:layout_width="@dimen/btn_radius"
            android:layout_height="@dimen/btn_radius"
            android:id="@+id/btn_cnn"
            android:text="@string/cnn"
            android:layout_margin="3dp"
            style="@style/small_btn"


            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/log_in_info"
        android:layout_below="@id/btn_container"
        android:id="@+id/rv_container"
        android:layout_marginBottom="5dp"


        >


            <View
                android:id="@+id/anchor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:id="@+id/rv_articles"
                android:layout_above="@id/anchor"


                />


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/anchor"
                android:layout_alignParentBottom="true"
                android:id="@+id/rv_articles_2"



                />


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/log_in_info"
        android:gravity="center"
        android:background="#000"
        android:textColor="#fff"
        android:padding="2dp"
        style="@style/Author_date"
        />

</RelativeLayout>