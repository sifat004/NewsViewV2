<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/background"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/home"
        android:id="@+id/article_img"

        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_img"
        android:textSize="@dimen/article_title"
        android:fontFamily="@font/lemon_milkbold"
        android:id="@+id/article_title"
        android:text="Title"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/article_date_author"
        android:layout_below="@+id/article_title"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="@dimen/article_date"
            android:fontFamily="@font/lemon_milkbold"
            android:id="@+id/article_author"
            android:gravity="left"
            android:layout_gravity="left"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/article_date"
            android:fontFamily="@font/lemon_milkbold"
            android:id="@+id/article_date"
            android:layout_gravity="right"
            android:gravity="right"

            />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_date_author"
        android:textSize="@dimen/article_desc"
        android:fontFamily="@font/lemon_milkbold"
        android:id="@+id/article_desc"
        android:layout_alignParentLeft="true"


        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_desc"
        android:textSize="@dimen/article_desc"
        android:fontFamily="@font/lemon_milkbold"
        android:id="@+id/article_source"
        android:layout_alignParentLeft="true"


        android:layout_alignParentStart="true" />

</RelativeLayout>